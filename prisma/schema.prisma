generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  binaryTargets = ["native","rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}


model User {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  email              String    @unique
  name               String?
  role               Role
  companyName        String?   // Only for role: COMPANY
  skills             String[]  // Only for role: PROFESSIONAL
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

enum Role {
  COMPANY   
  PROFESSIONAL 
}